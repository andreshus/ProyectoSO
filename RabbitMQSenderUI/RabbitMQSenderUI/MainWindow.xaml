<Window x:Class="RabbitMQSenderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RabbitMQ SENDER (WPF) - Final" Height="700" Width="1200">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,10">
            <Label Content="🌐 Configuración de Conexión" FontWeight="Bold"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Host/IP:" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtHost" Text="192.168.1.70" Margin="5"/>

                <Label Grid.Row="1" Content="Usuario:" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtUser" Text="proyecto" Margin="5"/>

                <Label Grid.Row="2" Content="Contraseña:" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtPass" Text="admin123" Margin="5"/>
            </Grid>

            <Separator Margin="0,15"/>

            <Label Content="🎯 Opciones" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Margin="5,5,5,10">
                <Label Content="Cantidad de mensajes que desas enviar:"/>
                <TextBox x:Name="txtQuantity" Text="10" Width="50" Margin="5,0"/>
            </StackPanel>

            <Label Content="Cola de Destino:" Margin="5,0"/>
            <StackPanel Orientation="Horizontal" Margin="5,0,0,20">
                <RadioButton x:Name="rbCola1" Content="Cola 1" IsChecked="True" GroupName="Queues" Margin="0,0,20,0"/>
                <RadioButton x:Name="rbCola2" Content="Cola 2" GroupName="Queues"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,0,0,10">
            <Label Content="📝 Escribe el mensaje que deseas enviar" FontWeight="Bold"/>
            <TextBox x:Name="txtMessageBody" 
                     Height="220" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     Text="{}{
    &quot;cliente_id&quot;: 1001,
    &quot;monto&quot;: 45.99
}"/>
        </StackPanel>

        <Label Grid.Row="1" Grid.ColumnSpan="2" Content="📜 Log de Eventos y Trazabilidad" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="lbLog" Margin="0,35,0,0" FontFamily="Consolas"/>

        <Button Grid.Row="2" Grid.ColumnSpan="2" x:Name="btnSend" Content="🚀 ENVIAR MENSAJES" 
                Height="40" Margin="0,10,0,0" Click="btnSend_Click" FontWeight="ExtraBold" FontSize="16"/>

    </Grid>
</Window>